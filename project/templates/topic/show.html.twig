{% extends 'base.html.twig' %}

{% block title %}Topic{% endblock %}

{% block body %}
    <h1>Topic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ topic.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ topic.label }}</td>
            </tr>
            <tr>
                <th>CurrentPlace</th>
                <td>{{ topic.currentPlace }}</td>
            </tr>
            <tr>
                <th>ReviewedAt</th>
                <td>{{ topic.reviewedAt ? topic.reviewedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PresentedAt</th>
                <td>{{ topic.presentedAt ? topic.presentedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('topic_index') }}">back to list SHOW</a>

    <a href="{{ path('topic_edit', {'id': topic.id}) }}">edit</a>

    {{ include('topic/_delete_form.html.twig') }}
{% endblock %}
